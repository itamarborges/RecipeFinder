<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.itamarborges.recipefinder.RecipeDetailActivity"
    tools:showIn="@layout/activity_recipe_detail">

    <fragment android:name="com.example.itamarborges.recipefinder.fragments.AdFragment"
              android:id="@+id/anuncioDetail"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:layout="@layout/fragment_ad"/>

    <WebView
        android:id="@+id/web_view_recipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
